<h2><span class="glyphicon glyphicon-credit-card"></span>クレジットカードの登録</h2>

<%= form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do %>

<div class="row">
	<div class="form-group">
		<div class="form-row">
			<div class="col-md-6">
<label>カード番号</label>
<%= text_field_tag :number, "", class: "number form-control", placeholder: "半角数字のみ", maxlength: "16", type: "text", id: "card_number" %>
<br>

<label>有効期限</label>
<select id="exp_month" name="exp_month" type="text">
	<option value="">--</option>
	<option value="01">01</option>
	<option value="02">02</option>
	<option value="03">03</option>
	<option value="04">04</option>
	<option value="05">05</option>
	<option value="06">06</option>
	<option value="07">07</option>
	<option value="08">08</option>
	<option value="09">09</option>
	<option value="10">10</option>
	<option value="11">11</option>
	<option value="12">12</option>
</select>
<span>/月</span>

<select id="exp_year" name="exp_year" type="text">
	<option value="">--</option>
	<option value="2019">19</option>
	<option value="2020">20</option>
	<option value="2021">21</option>
	<option value="2022">22</option>
	<option value="2023">23</option>
	<option value="2024">24</option>
	<option value="2025">25</option>
	<option value="2026">26</option>
	<option value="2027">27</option>
	<option value="2028">28</option>
	<option value="2029">29</option>
</select>
<span>/年</span>
<br>
<%= text_field_tag :cvc, "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc" %>
<div id="card_token"></div>
<%= submit_tag "追加する", id: "token_submit" %>

<% end %>
</div>
</div>
</div>
</div>