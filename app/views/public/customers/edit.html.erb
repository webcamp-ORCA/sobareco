<div class="col-lg-10">
<h1>会員情報の変更</h1>

<%= form_for @customer, :url => {:action => :update} do |f| %>

  <!-- 姓名 -->
    <div class="row">
        <div class="col-lg-3"></div>
  <div class="col-lg-3">
      <%= f.label(:last_name, "姓") %>
      <%= f.text_field :last_name, class:'form-control' %>
    </div>
  
    
    
    <div class="col-lg-3">
      <%= f.label(:first_name, "名") %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>
    
  

  <!-- 姓名（カナ） -->
  <div class="row">
    <div class="col-lg-3"></div>

    <div class="col-lg-3">
        <%= f.label(:lastname_name, "姓（カナ）") %>
        <%= f.text_field :lastname_kana, class:'form-control' %>
      </div>
      
      <div class="col-lg-3">
        <%= f.label(:firstname_kana, "名（カナ）") %>
        <%= f.text_field :firstname_kana, class: 'form-control' %>
      </div>
    
    </div>
  
    
    <!--郵便番号 -->

    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-3">
          <%= f.label(:post_code, "郵便番号") %>
          <%= f.text_field :post_code, class:'form-control' %>
        </div>
      </div>
  
    <!-- 都道府県 -->
    <div class="row">
      <div class="col-lg-3"></div>
   
      <div class="col-lg-6">
        <%= f.label(:address, "住所") %>
        <p>
        <!-- f.select :prefecture_code, as: :select, collection: JpPrefecture::Prefecture.all {|prefecture| [prefecture.name, prefecture.code]} -->
        都道府県を選択してください
        </p>
      </div>
    </div>

    <!-- 市区町村 -->
      <div class="row">
        <div class="col-lg-3"></div>

        <div class="col-lg-3">
          <%= f.text_field :municipality, class: 'form-control' %> 市区郡を入力してください
        </div>
      </div>
  
      <!-- 町名・番地 -->
      <div class="row">
        <div class="col-lg-3"></div>

        <div class= "col-lg-3">
          <%= f.text_field :address, class: 'form-control' %> 町名・番地を入力してください
        </div>
      </div>

    <!-- 電話番号 -->
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-3">
          <%= f.label(:telephone, "電話番号") %>
          <%= f.text_field :telephone, class:'form-control' %>
        </div>
      </div>

    <!-- メールアドレス -->
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
          <%= f.label(:email, "メールアドレス") %>
          <%= f.text_field :email, class:'form-control' %>
        </div>
      </div>


  <div class="row"></div>  
  
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="text-center">

      <!-- f.submit '変更する', class: "btn btn-primary" -->
<br>
<br>
 <%= link_to '変更する', "/customers/#{@customer.id}", class: "btn btn-primary" %>
  
 <!-- admin_customer_path(@customer.id) -->
</div>
</div>
  </div>
  </div>
  <% end %>



