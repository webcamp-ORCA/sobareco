<div class="col-lg-8">
	<h1><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>ショッピングカート</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<br>

<br>
<br>
<table class="table table-hover">
	<tr>
        <th>商品画像</th>
		<th>商品名</th>
		<th>数量</th>
		<th>価格</th>
        <th class="text-right">合計</th>
	</tr>
		<% current_customer.cartitems.each do |cart_item| %>
		<tr>
            <td><%= attachment_image_tag cart_item.product, :product_image, :fill, 250, 250, fallback: "no_image.png", size:'150x150' %>

			<td text-align:center;><font size="4"><%= cart_item.product.product_name %>
                <br>
                <br>アーティスト:<font size="3"><%= cart_item.product.artist.artist_name %></font>

                <br>
                <br >ジャンル:<font size="3"><%= cart_item.product.genre.genre_name %><br></font>
            </td>
			<td text-align:center;><font size="4"><%= cart_item.purchase_quantity %>個</font></td>

			<td text-align:center;><font size="4"><%= cart_item.product.product_price %>円</font></td>
            <td text-align:center;><font size="4"><%= cart_item.product.product_price * cart_item.purchase_quantity %>円</font></td>
	        <td><%= link_to '削除', cart_item_path(cart_item.id), method: :delete %></td>
	　　　　　<td><%= form_for(cart_item, url:cart_item_path(cart_item)) do |f| %>
				<%= f.number_field :purchase_quantity, min:"1", max: 10%>
				<%= f.submit '数量を変更' %>

			<% end %></td>
			</tr>
		<% end %>
     </tbody>
    </table>
<span>　　<%= link_to '一覧に戻る', products_path %>
        <%= link_to '購入手続きへ',  new_order_path %>
</span>
</div>

</div>

