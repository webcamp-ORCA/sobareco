<%= render 'genre_bar' %>

<h1>商品一覧</h1>
  <div class="col-lg-8">
    <% @products.each do |product| %>
      <div class="col-lg-3">
        <%= link_to product_path(product.id) do %>
          <%= attachment_image_tag product, :product_image, :fill, 150, 150, fallback: "no_image.png", size:'150x150' %><br>
          <%= product.product_name %><br>
          <%= product.artist.artist_name %><br>
          ￥<%= product.product_price %><br>
        <% end %>
      </div>
    <% end %>
    <%= paginate @products %>
  </div>

