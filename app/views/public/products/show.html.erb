<h1 class="headline">商品詳細</h1>

<div class="product-main">
  <div class="col-lg-3">
    <!-- 商品画像 -->
    <%= attachment_image_tag @product, :product_image, :fill, 250, 250, fallback: "no_image.png", size:'250x250' %><br>


    <div class="product-content">
        <% @discs.each do |disc| %>
        <div class="disc-number">
          <span class="mgl-10">Disc.<%= disc.disc_no %></span>
        </div><br>


          <% disc.records.each do |record| %>
            <div class="song-title">
              <%= record.song_title %>
            </div><br>
          <% end %>

        <% end %>
    </div>


  </div>
  <div class="col-lg-7">

      <div class="label label-info label-sm">
        <%= @product.product_status_i18n %>
      </div>

      <div class="product-cart-btn ">
       <%= form_for @cart_item, url: cart_items_path do |f| %>
       <%= f.hidden_field :product_id, :value => @product.id %>
       <%= f.submit 'カートに入れる' %>
     <% end %>
    </div>

      <!-- 商品名 -->
      <div class="product-name">
        <%= @product.product_name %>
      </div><br>

      <div class="product-info">

        <div class="info-name">
          アーティスト名：<%= @product.artist.artist_name %>
        </div>

        <div class="info-name">
          ジャンル名：<%= @product.genre.genre_name %>
        </div>

        <div class="info-name">
          レーベル名：<%= @product.label.label_name %>
        </div>

      <div class="product-price">
        <% @product.product_price =  @product.product_price * 1.1 %>
        価格(税込)：￥<%= @product.product_price %>
      </div><br>



  </div>

</div>




