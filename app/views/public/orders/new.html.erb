<div class="col-lg-5">
		<h2>購入画面</h2>
		<h4>お届け先・お支払い方法の選択</h4>
		<h5>お届け先</h5>
		<%= form_for (@order, url: "/orders/#{@order.id}/order_confirm") do |f| %>
	        <table class="table table-hover col-xs-3">
		         <td>
					<label><%= f.radio_button :addresses, "user_address" %>ログイン中のユーザーのお届け先を使用</label>
				</td>
			     <tr>
					<td>名前</td>
					<td><%= @customer.name %></td>
				</tr>
				<tr>
					<td>住所</td>
			        <td><%= @customer.homeaddress %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= @customer.post_code %></td>
				</tr>
	        </table>
				　　　　
		　　<% @customer.deliveries.each do |d| %>
			    <table class="table table-hover col-xs-3">
			      	<tr>
			      		<td>
							<label><%= f.radio_button :addresses, d.id %>登録済みのお届け先以外を使用</label>
				　　　　　</td>
				    </tr>
					<tr>
						<td>名前</td>
					    <td><%= d.name %></td>
					</tr>
					<tr>
						<td>住所</td>
						<td><%= d.address %></td>
					</tr>
					<tr>
						<td>電話番号</td>
					    <td><%= d.telephone %></td>
					</tr>
			   </table>
			<% end %>
		<% end %>
		 <%= link_to "新しい住所を登録する", new_delivery_path , class: "col-xs-4 btn btn-primary" %>
		    <%= form_for (@order, url: "/orders/#{@order.id}/order_confirm") do |f| %>
			    <table class="table table-hover">
				   <tr>
			            <th>支払い方法を選択する</th>
			        </tr>
						 <tr>
						  	<td>
						      <label><%= f.radio_button :settlement_method, 1 %>銀行振込</label>
						　　</td>
						</tr>
						<tr>
						    <td>
						      <label><%= f.radio_button :settlement_method, 2 %>代引き</label>
						　　 </td>
						</tr>
						<tr>
							<td>
						      <label><%= f.radio_button :settlement_method, 3 %>クレジットカード</label>
						   </td>
						</tr>
			             <tr>
				</table>
				<table class="table table-hover">
						<!--  purchase_quantity(購入希望数)と数量で計算 -->
						<tr>
							<td>商品合計</td>
						    <td><%= @total_price %>円 </td>
						    <td><%= @total_amount %>点</td>
						</tr>
						<tr>
							<td>送料</td>
						　　 <td><%= @order.postage %>円</td>
						</tr>
						<tr>
							<td>合計（税込）</td>
						　　 <td><%= @total.to_i + @order.postage.to_i %>円</td>
						</tr>
						<tr>
							<td>
					          <%= f.submit '次に進む'  ,class: " btn btn-primary "%>
					       </td>
					    </tr>
			   </table>
		    <% end %>
</div>
	<%= render 'footer'%>
