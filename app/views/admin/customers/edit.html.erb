
<!DOCTYPE html>
<div class="col-lg-10">
  <h1>ユーザー情報編集</h1>
  

  <%= form_for @customer, :url => {:action => :update} do |f| %>

  <!-- 姓名 -->
    <div class=row>
        <div class="col-lg-3"></div>
  <div class="col-lg-3">
      <%= f.label(:last_name, "姓") %>
      <%= f.text_field :last_name, class:'form-control' %>
    </div>
    
    <div class="col-lg-3">
      <%= f.label(:first_name, "名") %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    </div>

  <!-- 姓名（カナ） -->
  <div class=row>
    <div class="col-lg-3"></div>
    <div class="col-lg-3">
        <%= f.label(:lastname_name, "姓（カナ）") %>
        <%= f.text_field :lastname_kana, class:'form-control' %>
      </div>
      
      <div class="col-lg-3">
        <%= f.label(:firstname_kana, "名（カナ）") %>
        <%= f.text_field :firstname_kana, class: 'form-control' %>
      </div>
    
    </div>
    
    
    <!--郵便番号 -->

    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-3">
          <%= f.label(:post_code, "郵便番号") %>
          <%= f.text_field :post_code, class:'form-control' %>
        </div>
      </div>
  
    <!-- 住所 -->
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
        <%= f.label(:address, "住所") %>
        <%= f.text_area :address, class: 'form-control' %>
      </div>
    </div>


    <!-- 電話番号 -->
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-3">
          <%= f.label(:telephone, "電話番号") %>
          <%= f.text_field :telephone, class:'form-control' %>
        </div>
      </div>

    <!-- メールアドレス -->
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-6">
          <%= f.label(:email, "メールアドレス") %>
          <%= f.text_field :email, class:'form-control' %>
        </div>
      </div>


  
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="text-center">
  <%= link_to '変更・編集', edit_admin_customer_path(@customer.id), class: "btn btn-primary" %>
  

    
  <%= link_to '退会させる', destroy_confirm_admin_customer_path(@customer.id), class: "btn btn-primary" %>
</div>
</div>
  </div>
  </div>
  <% end %>