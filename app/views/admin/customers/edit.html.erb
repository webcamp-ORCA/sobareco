
<!DOCTYPE html>
<div class="col-lg-12">
  <div class="text-center">
  <h1>ユーザー情報編集</h1><br>
</div>

  <%= form_for @customer, :url => {:action => :update} do |f| %>

  <!-- 姓名 -->
    <div class="row">
        <div class="col-lg-3"></div>
  <div class="col-lg-3">
      <%= f.label(:last_name, "姓") %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    


    <div class="col-lg-3">
      <%= f.label(:first_name, "名") %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    </div>


  <!-- 姓名（カナ） -->
  <div class=row>
    <div class="col-lg-3"></div>
    <div class="col-lg-3">
        <%= f.label(:lastname_name, "姓（カナ）") %>
        <%= f.text_field :lastname_kana, class:'form-control' %>
      </div>
      
      
      <div class="col-lg-3">
        <%= f.label(:firstname_kana, "名（カナ）") %>
        <%= f.text_field :firstname_kana, class: 'form-control' %>
      </div>
    
    </div>
    <br>
    
    <!--郵便番号 -->

    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-3">
          <%= f.label(:post_code, "郵便番号") %>
          <%= f.text_field :post_code, class:'form-control' %>
        </div>
      </div>
  
  <br>
    <!-- 都道府県 -->
    <div class="row">

      <div class="col-lg-3"></div>
   
      <div class="col-lg-6">
        <%= f.label(:address, "住所") %>
        <p>
        <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, include_blank: '選択して下さい' %><br>
         都道府県を選択してください
        </p>
      </div>
    </div>

    <!-- 市区町村 -->
      <div class="row">
        <div class="col-lg-3"></div>

        <div class="col-lg-3">
          <%= f.text_field :municipality, class: 'form-control' %> 市区郡を入力してください
        </div>
      </div>
  
      <!-- 町名・番地 -->
      <div class="row">
        <div class="col-lg-3"></div>

        <div class= "col-lg-3">
          <%= f.text_field :address, class: 'form-control' %> 町名・番地を入力してください
        </div>
      </div>

<br>
    <!-- 電話番号 -->
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-3">
          <%= f.label(:telephone, "電話番号") %>
          <%= f.text_field :telephone, class:'form-control' %>
        </div>
      </div>

<br>
    <!-- メールアドレス -->
    <div class="row">
      <div class="col-lg-3"></div>
      <div class="col-lg-7">
          <%= f.label(:email, "メールアドレス") %>
          <%= f.text_field :email, class:'form-control' %>
        </div>
      </div>
  
<!--   <div class="row">
    <div class="col-lg-3"></div>
    <div class="text-center"> -->



</div>
</div>
<div class="col-lg-12">
  <div class="text-center">
<%= f.submit '変更する', class: "btn btn-success" %>
  </div>
  </div>
  <% end %>