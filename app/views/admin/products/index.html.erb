<h1>商品一覧</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <table>
        <tbody>
          <% @products.each do |product| %>
            <%= link_to admin_product_path(product.id) do %>
              <tr><%= attachment_image_tag product, :product_image, :fill, 100, 100, fallback: "no_image.png", size:'100x100' %></tr><br>

              <tr><%= product.product_name %></tr>

              <tr><% if product.artist_id.nil?%>
                いません
              <% else %>
                <%= product.artist.artist_name %>
              <% end %>

              <tr><%= product.product_price %>円</tr><br>
            <% end %>
          <% end %>

        </tbody>
      </table>

    </div>
  </div>
</div>
