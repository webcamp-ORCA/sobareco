<h1>商品一覧</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <table>
        <tbody>
          <% @products.each do |product| %>
            <%= link_to admin_product_path(product.id) do %>
              <tr><%= attachment_image_tag product, :product_image, :fill, 100, 100, fallback: "no_image.png", size:'100x100' %></tr><br>

              <tr><%= product.product_name %></tr>

              <tr><% if product.artist_id.nil?%>
                いません
              <% else %>
                <%= product.artist.artist_name %>
              <% end %>

              <tr><%= product.product_price %>円</tr><br>
            <% end %>
          <% end %>

        </tbody>
      </table>
      <%= paginate @products %>
    </div>

    <div class="row">
      <div class="col-lg-2">
        <table class="table navbar-fixed-right">
          <tbody>
            <tr>
              <td><%= link_to '商品一覧', admin_products_path %></td>
            </tr>
            <tr>
              <td><%= link_to '商品登録', new_admin_product_path %></td>
            </tr>
            <tr>
               <td><%= link_to '会員一覧', admin_customers_path %></td>
            </tr>
            <tr>
               <td><%= link_to '入荷一覧', admin_arrival_managements_path %></td>
            </tr>
            <tr>
              <td><%= link_to '入荷登録', new_admin_arrival_management_path %></td>
            </tr>
            <tr>
              <td><%= link_to '注文一覧',  admin_orders_path %></td>
            </tr>
            <tr>
              <td><%= link_to 'アーティスト一覧', admin_artists_path %></td>
            </tr>
            <tr>
              <td><%= link_to 'レーベル登録', admin_labels_path %></td>
            </tr>
            <tr>
              <td><%= link_to 'ジャンル登録', admin_genres_path %></td>
            </tr>
          </tbody>
        </table>
      </div>
   </div>

  </div>
</div>

