<div class="nested-fields ">
  <div class="form-group col-lg-6">
    <%= f.text_field :disc_no, autocomplete: 'off', :placeholder => "半角数字で入力" %>
    <%= link_to_remove_association 'ディスクを削除', f %>
  </div>

  <div class="records row">
    <%= f.fields_for :records do |record| %>
      <%= render 'record_fields', f: record %>
    <% end %>
  </div>
    <div class="links col-lg-6" style="float:right">
      <%= link_to_add_association "曲を追加", f, :records %>
    </div>

</div>




