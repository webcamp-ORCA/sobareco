<h1>ジャンル登録</h1>
  <%= form_for(@genre, url: '/admin/genres/') do |f|%>



    <%= f.text_field :genre_name %>
      <%= f.submit '登録' %>
    <% end %>
<div class="col-lg-8">
	<h1>ジャンル一覧</h1>
		<table class="table table-hover">
			<thead>
			<tr>
				<th>ジャンル名</th>
			</tr>
				</thead>
				<tbody>
		<% @genres.each do |genre| %>
			<tr>
		<td><%= genre.genre_name %></td>
		<td><%= link_to "編集", edit_admin_genre_path(genre.id) ,class: "label label-primary" %></td>
	       </tr>
       <% end %>
	    </tbody>
	</table>
	<%= paginate @genres %>
   </div>
</div>


